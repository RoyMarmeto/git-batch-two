    {{ 'testimonial.css' | asset_url | stylesheet_tag }}
    {{ 'flickity.css' | asset_url | stylesheet_tag }}
    {{ 'flickity.js' | asset_url | script_tag }}
    
        

<div class="testimonial testimonial-{{ section.id }} mb-20">
{% if section.blocks.size > 0 %}
<div class="container">

 {% if section.blocks.size > 0 %}
    <div class="testimonial__wrapper ">
      <div class="testimonial__slider" data-flickity='{ "cellAlign": "left", "contain": true, "prevNextButtons": false }'>
        {% for block in section.blocks %}
          <div class="testimonial__content">
            <div class="testimonial-item">
             {% if block.settings.heading != blank %}
              <div class="testimonial__heading heading h2">{{ block.settings.heading }}</div>
             {% endif %}
              
              <div class="testimonial-item__reviews">
                {% for star in (1..block.settings.review_stars) %}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512">
                    <path d="M316.9 18C311.6 7 300.4 0 288.1 0s-23.4 7-28.8 18L195 150.3 51.4 171.5c-12 1.8-22 10.2-25.7 21.7s-.7 24.2 7.9 32.7L137.8 329 113.2 474.7c-2 12 3 24.2 12.9 31.3s23 8 33.8 2.3l128.3-68.5 128.3 68.5c10.8 5.7 23.9 4.9 33.8-2.3s14.9-19.3 12.9-31.3L438.5 329 542.7 225.9c8.6-8.5 11.7-21.2 7.9-32.7s-13.7-19.9-25.7-21.7L381.2 150.3 316.9 18z" />
                  </svg>
                {% endfor %}
              </div>

              {% if block.settings.paragraph_text != blank %}
                <div class="testimonial-item__text text--width">
                  {{ block.settings.paragraph_text }}
                </div>
              {% endif %}
               <div class="flex">
                  <div class="testimonial-item__image">
                  {% render 'image',
                    mobileSrc: block.settings.image,
                    desktopSrc: block.settings.image
                  %}
                </div>      
                        
                {% if block.settings.author_name != blank %}
                  <div class="testimonial-item__author author--name h5">
                    {{ block.settings.author_name }}
                  </div>
                {% endif %} 
               </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  {% endif %}
  </div>
  {% endif %}
</div>
{% style %}
  .testimonial-{{ section.id }} {
    background-color:{{section.settings.background_color }};
  }
  .testimonial-{{ section.id }} *{
    color:{{section.settings.text_color }};
    font-size: 24px;
  }
{% endstyle %}

{% schema %}
{
  "name": "Testmonial",
  "tag": "section",
  "class": "section",
   "settings": [
    {
      "type":"color",
      "id":"background_color",
      "label":"Background color",
      "default":"#8d6464"
    },
     {
      "type":"color",
      "id":"text_color",
      "label":"Text color",
       "default":"#000"
     }
   
   ],
  "blocks": [
    {
      "name": "Testimonials",
      "type": "testimonial",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading text",
          "default": "Love from our customers"
        },
        {
          "type":"color",
          "id":"heading_color",
          "label":"Heading text color",
           "default":"#000"
         },
        {
          "type": "select",
          "id": "review_stars",
          "label": "Review stars",
          "options": [
            {
              "value": "1",
              "label": "1 star"
            },
            {
              "value": "2",
              "label": "2 stars"
            },
            {
              "value": "3",
              "label": "3 stars"
            },
            {
              "value": "4",
              "label": "4 stars"
            },
            {
              "value": "5",
              "label": "5 stars"
            }
          ],
          "default": "4"
        },
        {
          "type": "richtext",
          "id": "paragraph_text",
          "label": "Paragraph text",
          "default":"<p>We deliver high-quality, beautiful linens at a great price. We cut out the middlemen and deliver directly to you to keep our costs low which keeps that extra money in your pocket.</p>"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Author image",
          "info": "600 x 800px .jpg recommended"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Image (Mobile)",
          "info": "600 x 800px .jpg recommended"
        },
       {
        "type": "text",
        "id": "author_name",
        "label": "Author name",
        "default": "Agnes"
      },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "Text alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            }, {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testmonial"
    }
  ]
}
{% endschema %}
